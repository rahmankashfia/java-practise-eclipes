package apex.advance.java.coding.practice;

import java.lang.management.GarbageCollectorMXBean;
import java.util.Deque;
import java.util.HashMap;
import java.util.LinkedList;
import java.util.Queue;

public class LRUCache {

	Deque<Integer> keyQueue = new LinkedList<Integer>();
	HashMap<Integer, Integer> hm = new HashMap<Integer, Integer>();
	int sizeLRU = 0;
	int count = 0;

	LRUCache(int capacity) {
		this.sizeLRU = capacity;
	}

	public int get(int key) {
		if (hm.containsKey(key)) {
			int result = get(key);
			if (keyQueue.isEmpty() == false) {
				keyQueue.poll();
				keyQueue.add(key);
			}
			return result;
		}
		else {
			return -1;
		}
		
	}

	

	public void put(int key, int value) {
		if (this.sizeLRU == count - 1) {
			// get key from linkedlist
			// remove thatkey vale from hashmap
			count--;
		}
		put(key, value);
		count++;

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
